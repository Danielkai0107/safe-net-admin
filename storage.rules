rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // 店家相關圖片：已認證用戶可上傳，所有人可讀取
    match /stores/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null 
                   && request.resource.size < 5 * 1024 * 1024 // 限制 5MB
                   && request.resource.contentType.matches('image/.*'); // 只允許圖片
    }
    
    // 其他檔案：需要認證
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
                   && request.resource.size < 10 * 1024 * 1024; // 限制 10MB
    }
  }
}
